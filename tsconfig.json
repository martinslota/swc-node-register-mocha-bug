{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true
  },
  "types": ["mocha", "node"]
}
